// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User {
  id              String     @id @default(uuid())
  email           String     @unique
  password        String
  name            String
  lastName        String
  createdEmployee  Employee[]
}

model Employee {
  id        String @id @default(uuid())
  firstName String
  lastName  String
  surName   String?
  age       Int
  birthDate DateTime? // дата рождения
  profession String
  address   String
  employeeNumber  String?
  height    Int?    // рост в см
  clothingSize String? // размер одежды
  shoeSize  String? // размер обуви

  user      User   @relation(fields: [userId], references: [id])
  userId    String
}

model Inventory {
  id          String @id @default(uuid())
  itemName    String
  itemType    String  // "спецодежда", "инструмент", "оборудование", "сиз"
  issueDate   DateTime @default(now())
  quantity    Int     @default(1)
  status      String  @default("выдан") // "выдан", "возвращен", "списан"
  employeeId  String  // Простая строка без связи
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model InventoryAddon {
  id                String @id @default(uuid())
  name              String
  issueDate         DateTime @default(now())
  wearPeriodMonths  Int      // срок носки в месяцах
  nextReplacementDate DateTime
  inventoryId       String  // Простая строка без связи
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model SizNorm {
  id            String @id @default(uuid())
  name          String
  classification String?
  quantity      Int     @default(1)
  period        String
  periodType    String  // "months" или "until_worn"
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}